<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rule"
        android:textSize="40dp"
        android:layout_marginTop="20dp"
        android:id="@+id/ruleTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.Diffcult have easy, medium, hard for player to select. \n\n2. Player have 1 mintue to answer the question. \n\n3. Question is randomly show."
        android:id="@+id/ruleDescirbtion"
        android:layout_below="@+id/ruleTitle"
        android:layout_marginTop="30dp"
        android:layout_above="@+id/ruleBackButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/ruleBackButton"
        android:onClick="ruleBackMethod"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>